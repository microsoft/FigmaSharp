<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>
    <Runtime>
    </Runtime>
       <Extension path="/MonoDevelop/Ide/StartupHandlers">
        <Class class="MonoDevelop.Figma.Commands.FigmaInitCommand"/>
    </Extension>
    <Extension path="/MonoDevelop/Core/MimeTypes">
        <MimeType id="text/fig-x-json" _description="Figma layout" baseType="text/x-json">
            <File pattern="*.figma"/>
        </MimeType>
    </Extension>
   <Extension path="/MonoDevelop/Ide/GlobalOptionsDialog/Other">
        <Section id="FigmaSettings" _label="Figma Settings" class = "MonoDevelop.Figma.FigmaOptionsPanel" icon="md-prefs-source" />
  </Extension>
    
     <Extension path = "/MonoDevelop/DesignerSupport/PropertyProviders">
            <Class class = "MonoDevelop.Figma.FigmaPropertyProvider"/>
    </Extension>
    
    <Extension path = "/MonoDevelop/Ide/ContextMenu/ProjectPad/Add">
        <SeparatorItem
                id="MonoDevelop.FigmaSharp.ProjectPad.Separator"
        />
        <CommandItem 
            id = "MonoDevelop.Figma.Commands.FigmaOpenBundleFormCommandHandler"
            insertafter="MonoDevelop.FigmaSharp.ProjectPad.Separator"
            insertbefore="AddSectionEnd"
        />
    </Extension>
    
    <Extension path = "/MonoDevelop/Ide/Commands">
        <Category _name = "FigmaSharp" id = "FigmaSharp">
            <Command id = "MonoDevelop.Figma.Commands.FigmaOpenBundleFormCommandHandler"
                _label = "Figma Bundle..."
                defaultHandler = "MonoDevelop.Figma.Commands.FigmaOpenBundleFormCommandHandler"
                _description = "Generates a figma bundle based in remote id"/>
        </Category>    
    </Extension>
    
    <Extension path = "/MonoDevelop/Ide/Pads">
        <Pad id = "MonoDevelop.Figma.FigmaDragAndDropPad"
            class = "MonoDevelop.Figma.FigmaDragAndDropPad"
            _label="Figma Toolbox"
            icon = "md-toolbox-pad"
            group = "Designer"
            defaultLayout="*"
            defaultPlacement="Right"
            defaultStatus="AutoHide"
            />
            <Pad id = "MonoDevelop.Figma.PropertyPad"
            class = "MonoDevelop.Figma.PropertyPad"
            _label="Figma Properties"
            icon = "md-properties-pad"
            group = "Designer"
            defaultLayout="*"
            defaultPlacement="Right"
            defaultStatus="AutoHide"
            />
    </Extension>
</ExtensionModel>